{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "rootDir": "./",
        "allowJs": true,
        "moduleResolution": "node",
        "module": "CommonJS",
        "removeComments": false,
        "outDir": "dist",
        "resolveJsonModule": true,
        "target": "es2018",
        "sourceMap": true,
        "baseUrl": "./",
        "lib": ["es2020"]
    },
    "exclude": ["node_modules", "dist", "test", "husky.config.js", "commitlint.config.js", "jest.config.js"]
}